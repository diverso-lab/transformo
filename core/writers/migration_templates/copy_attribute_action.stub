
    <transformation type="{{ action.transformation_type()}}" id="{{ action.__class__.__name__ }}">
        <action type="{{ action.action_type()}}">
            <from>{{ action.entity_from_id() }}</from>
            <to>{{ action.entity_to_id() }}</to>
            <attribute_from>{{ action.attribute_from_name() }}</attribute_from>
            <attribute_to>{{ action.attribute_to_name() }}</attribute_to>
            <type>{{ action.type() }}</type>
        </action>
    </transformation>
